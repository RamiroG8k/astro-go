<div class="container">
    <h1>Pomodoriux</h1>
    
    <div class="mode-selector">
        <button id="basic-mode" class="mode-btn active">Basic (25/5)</button>
        <button id="zen-mode" class="mode-btn">Zen (50/10)</button>
    </div>
    
    <div class="timer-display">
        <div id="timer-label" class="timer-label">Ready</div>
        <div id="time-left" class="time-left">00:00</div>
    </div>
    
    <div class="controls">
        <button id="start-btn" class="control-btn start">Start Focus</button>
        <button id="pause-btn" class="control-btn pause hidden">Pause</button>
        <button id="resume-btn" class="control-btn resume hidden">Resume</button>
        <button id="reset-btn" class="control-btn reset hidden">Reset</button>
    </div>
</div>

<script src="../lib/timer/index.ts" />

<style>
    :root {
        --primary-color: #e74c3c;
        --rest-color: #2ecc71;
        --background-color: #f5f5f5;
        --text-color: #333;
        --button-text: #fff;
    }
    
    @media (prefers-color-scheme: dark) {
        :root {
            --background-color: #222;
            --text-color: #f5f5f5;
        }
    }
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
    
    .container {
        width: 100%;
        max-width: 500px;
        padding: 2rem;
        text-align: center;
    }
    
    h1 {
        margin-bottom: 2rem;
    }
    
    .mode-selector {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }
    
    .mode-btn {
        background: none;
        border: 1px solid var(--primary-color);
        color: var(--text-color);
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .mode-btn:first-child {
        border-radius: 4px 0 0 4px;
    }
    
    .mode-btn:last-child {
        border-radius: 0 4px 4px 0;
    }
    
    .mode-btn.active {
        background-color: var(--primary-color);
        color: var(--button-text);
    }
    
    .timer-display {
        margin: 2rem 0;
        position: relative;
    }
    
    .timer-label {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }
    
    .time-left {
        font-size: 5rem;
        font-weight: bold;
        width: 250px;
        height: 250px;
        border-radius: 50%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 4px solid var(--primary-color);
    }
    
    .focus .time-left {
        border-color: var(--primary-color);
    }
    
    .rest .time-left {
        border-color: var(--rest-color);
    }
    
    .controls {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }
    
    .control-btn {
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: var(--button-text);
        transition: all 0.3s ease;
    }
    
    .start {
        background-color: var(--primary-color);
    }
    
    .pause {
        background-color: #f39c12;
    }
    
    .resume {
        background-color: #3498db;
    }
    
    .reset {
        background-color: #95a5a6;
    }
    
    .hidden {
        display: none;
    }
    
    @media (max-width: 500px) {
        .time-left {
            font-size: 4rem;
            width: 200px;
            height: 200px;
        }
    }
</style>