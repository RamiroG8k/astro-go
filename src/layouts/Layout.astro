---
import { SEO } from 'astro-seo';

import background from '../assets/background.svg';
import { config as seoConfig } from '../lib/seo/config';

const {
	title = seoConfig.siteName,
	description = seoConfig.description,
	image = seoConfig.image,
	disableIndexing = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
       	<!-- Global meta tags. -->
       	<meta charset="utf-8" />
       	<meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#E6E6E6" media="(prefers-color-scheme: light)">
        <meta name="theme-color" content="#1A1A1A" media="(prefers-color-scheme: dark)">

       	<!-- Astro meta tags. -->
		<meta name="generator" content={Astro.generator} />

		<!-- SEO meta tags. -->
		<SEO
			title={title}
			description={description}
			noindex={disableIndexing}
			nofollow={disableIndexing}
			openGraph={{
				basic: {
					image: image.url,
					title,
					type: 'website'
				},
				image: {
					alt: image.alt,
					height: image.height,
					width: image.width,
				},
				optional: {
					description,
					siteName: title
				}
			}}
			twitter={{
				card: seoConfig.twitter.card
			}}
		/>

		<!-- Favicons. -->
        <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
        <link rel="shortcut icon" href="/favicon/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
	</head>

	<body>
	    <img id="background" src={background.src} alt="" fetchpriority="high" />

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
	}
	
	:root {
	    --filter: blur(100px);
	}
	
	#background {
		position: fixed;
		inset: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		animation: ease-in-out customAnimation 30s infinite;
	}
	
	@keyframes customAnimation {
		0% {
			transform: rotate(0deg) scale(1.25);
			filter: var(--filter) hue-rotate(0deg);
			
		}
		50% {
            transform: rotate(180deg) scale(2);
            filter: var(--filter) hue-rotate(180deg);
		}
		100% {
		    transform: rotate(360deg) scale(1.25);
			filter: var(--filter) hue-rotate(360deg);
		}
	}
</style>
