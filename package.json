{
  "name": "astro-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "start:local": "astro sync && astro dev --host",
    "health:check": "astro check && astro info",
    "format:all": "biome format --write ./src",
    "lint:all": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "check:all": "biome check --write ./src",
    "build:production": "astro check && astro build",
    "preview:production": "astro build && astro preview",
    "favicon:check": "npx realfavicon check 4321 -s cli -w"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/sitemap": "^3.4.2",
    "astro": "^5.12.8",
    "astro-compress": "^2.3.8",
    "astro-seo": "^0.8.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4"
  }
}
